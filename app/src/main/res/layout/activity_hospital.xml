<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".activities.HospitalActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSpecialty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card"
        android:layout_margin="16dp"/>


    <TextView
        android:id="@+id/textViewEmptyHospitals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hospitals found"
        android:visibility="gone"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>


    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/top_bar_layout">

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="  Select Hospital"
                android:textSize="27sp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow_back"
                app:tint="@color/black" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            style="@style/OtpBoxStyle"
            android:padding="12dp">

            <ImageView
                android:id="@+id/cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                app:tint="@color/black" />

            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search your Location"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
