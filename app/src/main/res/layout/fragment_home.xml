<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".fragments.HomeFragment">

    <!-- Shimmer Placeholder -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shimmer_auto_start="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <include layout="@layout/shimmer_placeholder_home" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- Header Background -->
        <View
            android:id="@+id/header_background"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:background="@color/light_blue_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Top Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/profile_lu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            android:text="Hi, Vishwaa"
            android:textColor="@color/dark_blue_text"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_image"
            app:layout_constraintBottom_toTopOf="@id/tv_location"
            app:layout_constraintVertical_chainStyle="packed" />

        <!-- Location Text -->
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Loading location..."
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            android:drawablePadding="3dp"
            app:drawableStartCompat="@drawable/ic_location_blu"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintEnd_toEndOf="@id/tv_greeting"
            app:layout_constraintTop_toBottomOf="@id/tv_greeting"
            app:layout_constraintBottom_toBottomOf="@id/profile_image" />

        <!-- Search Bar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/search_bar_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search"
                    app:tint="@color/secondary_text" />
                <AutoCompleteTextView
                    android:id="@+id/autoCompleteSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Search for doctors or specialties..."
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:textColor="@color/secondary_text"
                    android:dropDownHeight="200dp"
                    android:dropDownVerticalOffset="5dp"
                    android:dropDownWidth="match_parent"
                    android:completionThreshold="1"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Content Scroll -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/search_bar_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="32dp"
                android:background="@color/white">

                <!-- Actions: Book & Call -->
                <LinearLayout
                    android:id="@+id/actions_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_book_appointment"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Book \nAppointment"
                        android:textAllCaps="false"
                        android:paddingVertical="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_calendar"
                        android:backgroundTint="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_call_hospital"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Call and \nBook"
                        android:textAllCaps="false"
                        android:paddingVertical="12dp"
                        app:cornerRadius="16dp"
                        app:strokeColor="@color/primary"
                        android:textColor="@color/primary"
                        android:backgroundTint="@color/white"
                        app:icon="@drawable/ic_call" />
                </LinearLayout>

                <!-- Promo Banner -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerPromoBanner"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="24dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/actions_container"
                    app:layout_constraintEnd_toEndOf="@id/actions_container"
                    app:layout_constraintTop_toBottomOf="@id/actions_container" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayoutIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/viewPagerPromoBanner"
                    app:layout_constraintEnd_toEndOf="@id/viewPagerPromoBanner"
                    app:layout_constraintTop_toBottomOf="@id/viewPagerPromoBanner"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp" />

                <!-- Specialty Section -->
                <TextView
                    android:id="@+id/tv_specialty_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find Doctors by Specialty"
                    android:textColor="@color/dark_blue_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/tabLayoutIndicator"
                    app:layout_constraintStart_toStartOf="@id/actions_container" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_search_suggestions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/search_bar_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvSearchNoData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No results found"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:gravity="center"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/recycler_view_search_suggestions"
                    app:layout_constraintStart_toStartOf="@id/recycler_view_search_suggestions"
                    app:layout_constraintEnd_toEndOf="@id/recycler_view_search_suggestions"/>


                <TextView
                    android:id="@+id/textViewViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all"
                    android:textSize="16sp"
                    android:textColor="?attr/colorPrimary"
                    android:paddingHorizontal="8dp"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_specialty_title"
                    app:layout_constraintEnd_toEndOf="@id/actions_container" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_specialty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="8dp"
                    android:background="@drawable/recyler_view_bg"
                    app:layout_constraintTop_toBottomOf="@id/tv_specialty_title"
                    app:layout_constraintStart_toStartOf="@id/actions_container"
                    app:layout_constraintEnd_toEndOf="@id/actions_container" />

                <TextView
                    android:id="@+id/tvNoData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No data found"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:gravity="center"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/recycler_view_specialty"
                    app:layout_constraintStart_toStartOf="@id/recycler_view_specialty"
                    app:layout_constraintEnd_toEndOf="@id/recycler_view_specialty" />

                <!-- Quick Services -->
                <TextView
                    android:id="@+id/textViewQuickServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Services"
                    android:textColor="@color/dark_blue_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/recycler_view_specialty"
                    app:layout_constraintStart_toStartOf="@id/actions_container" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scrollbars="none"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/textViewQuickServices"
                    app:layout_constraintStart_toStartOf="@id/actions_container"
                    app:layout_constraintEnd_toEndOf="@id/actions_container">

                    <LinearLayout
                        android:id="@+id/quickServicesContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <!-- Medicine Delivery Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardMedicineDelivery"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/light_gray_chip">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/lottie_medicine_delivery"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="8dp"
                                    android:text="Medicine Delivery"
                                    android:textColor="@color/dark_blue_text"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Virtual Appointment Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardVirtualAppointment"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/light_gray_chip">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/lottie_virtual_appointment"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="8dp"
                                    android:text="Consult Doctor Online"
                                    android:textColor="@color/dark_blue_text"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
